{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "task g++",
			"command": "F:/MinGW/mingw64/bin/g++.exe",
			"args": [
				"-g",
                 "${file}",
                 "-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
			],
			"options": {
				"cwd": "F:/MinGW/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		}
	]
}